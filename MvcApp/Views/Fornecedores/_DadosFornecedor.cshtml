@using MvcApp.ViewModels.Fornecedor
@model FornecedorViewModel

@if (!string.IsNullOrWhiteSpace(Model.FotoPerfilPath))
{
    <div class="mb-3 text-center">
        <img src="@Model.FotoPerfilUrl"
             alt="Foto do fornecedor @Model.Nome"
             class="img-thumbnail"
             style="max-width: 80%; height: auto;" />
    </div>
}

<dl class="mb-0">
    <div class="mb-2">
        <dt class="fw-semibold">Nome</dt>
        <dd>@Model.Nome</dd>
    </div>

    <div class="mb-2">
        <dt class="fw-semibold">CNPJ</dt>
        <dd>@Model.CnpjFormatado</dd>
    </div>

    <div class="mb-2">
        <dt class="fw-semibold">CEP</dt>
        <dd>@Model.CepFormatado</dd>
    </div>

    <div class="mb-2">
        <dt class="fw-semibold">Endere√ßo</dt>
        <dd>@Model.Endereco</dd>
    </div>

    <div class="mb-2">
        <dt class="fw-semibold">Segmento</dt>
        <dd>@Model.Segmento</dd>
    </div>
</dl>